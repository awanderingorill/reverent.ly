{
  "name": "Reverent.ly",
  "version": "1.0",
  "description": "Internet for the Supreme Leader.",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js", "jquery.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Title Changer"
  },
  "permissions": [
    "tabs"
  ],
  "icons": { "16": "img/fav_icon.png",
           "48": "img/icon48.png",
          "128": "img/icon128.png" },
  "manifest_version": 2
}